using UnityEngine;

public class ObjectManager : MonoBehaviour
{
    public GameObject[] objectsToInstantiate;

    void Start()
    {
        // Instantiate all objects
        for (int i = 0; i < objectsToInstantiate.Length; i++)
        {
            Instantiate(objectsToInstantiate[i]);

            // Use Invoke to deactivate the object after a delay
            float delay = i * 1.0f; // Delay increases by 1 second for each object
            Invoke("DeactivateObject", delay);
        }
    }

    void DeactivateObject()
    {
        // Deactivate the object here
    }
}
